<h2><%= t('.header') %></h2>

<section class="station_management">
  <h3><%= t('.station_management.header') %></h3>

  <ul class="stations">
    <% stations.each do |station| %>
      <li><%= station.name %></li>
    <% end %>
  </ul>

  <%= link_to new_admins_station_path, class: 'add_station' do %>
    <%= fa_icon 'plus' %>
  <% end %>
</section>

<section class="miscellaneous">
  <h3><%= t('.miscellaneous.header') %></h3>

  <div class="links">
    <%= link_to t('.miscellaneous.admins'), admins_admins_path %>
    <%= link_to t('.miscellaneous.user_list'), admins_users_path %>
    <%= link_to t('.miscellaneous.gift_card_requests'), admins_redemptions_path %>
  </div>
</section>
