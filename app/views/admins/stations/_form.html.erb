<%= form_for [:admins, station_form], url: admins_stations_path do |f| %>
  <%= render 'shared/errors', record: station_form %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :street %>
  <%= f.text_field :street, required: true %>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>

  <%= f.label :state %>
  <%= f.select :state, StatesHelper::US_STATES, {}, required: true %>

  <%= f.label :zip %>
  <%= f.text_field :zip, required: true, pattern: '^\d{5}(-\d{4})?$' %>

  <%= f.submit %>
<% end %>
