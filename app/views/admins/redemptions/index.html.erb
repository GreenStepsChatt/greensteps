<h1><%= t('.header') %></h1>
<table class="work_list">
  <tr>
    <th>User Email</th>
    <th>Gift Card Value</th>
    <th>Date Requested</th>
    <th></th>
  </tr>
  <% redemptions.each do |redemption| %>
    <tr id="redemption_<%= redemption.id %>">
      <td>
        <%= redemption.user.email %>
      </td>
      <td>
        <%= redemption.value %>
      </td>
      <td>
        <%= redemption.created_at.in_time_zone("Eastern Time (US & Canada)").to_s(:long_ordinal) %>
      </td>
      <td>
        <%= form_for redemption, url: admins_redemption_path(redemption), remote: true do |form| %>
          <%= form.text_field :confirmation_number, placeholder: t('.confirmation_number') %>
          <%= form.submit %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
