<script async defer
src="https://maps.googleapis.com/maps/api/js?key=<%=ENV.fetch('GOOGLE_MAPS_KEY', '')%>&callback=Greensteps.initMap">
</script>

<article class="stats">
  <header>
    <h2><%= t('.stats_title') %></h2>
    <%= link_to new_deed_path, class: 'add' do %>
      <%= fa_icon 'plus' %>
    <% end %>
  </header>

  <section class="trash_bags">
    <div class="count">
      <%= pluralize(
        current_user.total_trash_bags,
        User.human_attribute_name(:trash_bags)
      ) %>
    </div>
  </section>

  <section class="miles">
    <div class="count">
      <%= pluralize(
        current_user.total_miles,
        User.human_attribute_name(:miles)
      ) %>
    </div>
  </section>

  <section class="total_points">
    <div class="count">
      <%= pluralize(
        PointCalculator.new(current_user).total_points,
        t('.points')
      ) %>
    </div>
  </section>
</article>

<article class="station_map">
  <header>
    <h2><%= t('.station_map_title') %></h2>
  </header>

  <div id="map"></div>
  <aside id="map_info">
    <h3 id="marker_title"></h3>
    <p id="marker_address"></p>
    <button type="button">
      <%= fa_icon 'close' %>
    </button>
  </aside>
</article>
