<article class="prizes">
  <h2><%= t('.title') %></h2>
  <h3><%= t('.available_points', count: current_user.unredeemed_points) %></h3>
  <%= form_for redemption, remote: true do |form| %>
    <% prizes.each do |prize| %>
      <%= form.radio_button :prize_id, prize.id %>
      <%= form.label :prize_id, value: prize.id do %>
        <%= button_tag type: 'button', disabled: current_user.cannot_redeem?(prize) do %>
          <h3><%= prize.title %></h3>
          <p><%= pluralize prize.cost, 'point' %></p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</article>
