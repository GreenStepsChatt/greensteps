<article class="prizes">
  <header>
    <h2><%= t('.title') %></h2>
    <h3><%= t('.available_points', count: current_user.available_points) %></h3>
  </header>
  <%= form_for redemption_form, remote: true do |form| %>
    <% redemption_form.prize_choices.each do |prize| %>
      <%= form.radio_button :prize_id, prize.id %>
      <%= form.label :prize_id, value: prize.id do %>
        <%= button_tag type: 'button', disabled: prize.disabled? do %>
          <h3><%= prize.title %></h3>
          <p><%= Prize.human_attribute_name('cost', count: prize.cost) %></p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</article>
